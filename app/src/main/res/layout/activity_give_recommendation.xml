<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".give_recommendation"
    android:background="@color/user_bg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="179dp"
        android:text="@string/give_a_recommendation"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewReadingLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="60dp"
        android:text="@string/select_reading_level1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGenre" />

    <Spinner
        android:id="@+id/editTextReadingLevel"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_below="@id/textViewReadingLevel"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/btn_dropdown"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewReadingLevel" />

    <EditText
        android:id="@+id/editTextGenre"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="2dp"
        android:hint="@string/genre_s1"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TextContrastCheck"
        android:inputType="text"
        android:autofillHints="" />

    <Button
        android:id="@+id/buttonCriteria"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:text="@string/submit_criteria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextReadingLevel" />

    <ImageView
        android:id="@+id/imageViewBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/todo2" />

    <Button
        android:id="@+id/buttonSave3"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:text="@string/back1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextReadingLevel" />

    <ImageView
        android:id="@+id/adImg"
        android:layout_width="390dp"
        android:layout_height="147dp"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSave3"
        app:srcCompat="@drawable/advertisement" />

</androidx.constraintlayout.widget.ConstraintLayout>